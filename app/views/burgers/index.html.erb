<h1>Listing burgers</h1>

<table class="burger_table">
  <tr>
    <th>Position</th>
    <th>Picture</th>
    <th>Name</th>
    <th>Description</th>
    <th>Brand</th>
    <th></th>
  </tr>

<% @burgers.each do |burger| %>
  <tr>
    <td></td>
    <td><%= image_tag burger.photo.url(:small) %></td>
    <td><%= burger.name %></td>
    <td class="burger_description"><%= burger.description %></td>
    <td><%= burger.brand.name %></td>
    <td><%= link_to 'Show', burger %><br />
    <%= link_to 'Edit', edit_burger_path(burger) %><br />
    <%= link_to 'Destroy', burger, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Burger', new_burger_path %>
